<% provide(:title, @user.name) %>
 <% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% else %>
<% flash.now[:error] = 'Please Sign in first!' %>
<%= render 'shared/error_messages' %>      
<% end %> 